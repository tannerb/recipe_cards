<% provide(:title, "Home") %>
<div id="login">
  <div id="login-inner">
    <%= form_tag(action: "login", method: "post") do %>
      <%= label_tag(:username, "Username:") %>
      <%= text_field_tag(:username) %>
      <%= label_tag(:password, "Password:") %>
      <%= password_field_tag(:password) %>
      <%= submit_tag("Login") %>
     <% end %>
  </div>
</div>
